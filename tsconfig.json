{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib"
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
  ]
}